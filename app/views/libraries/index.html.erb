<%= link_to "Add Library", new_library_path %>

<div class='container'>
  <div class='row'>
    <% @libraries.each do |library| %>
      <div class='col-md-3 col-lg-3'>
        <h3><%= library.name %></h3>
        <%= image_tag("#{library.image}") %>
        <h3><%= library.location %></h3>
        <% if current_user %>
          <%= button_to "Join", library_users_path(library) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
